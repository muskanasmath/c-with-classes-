#include<iostream.h>
#include<conio.h>
#include<process.h>
#include<fstream.h>
void bubble(int[] ,int);
  void main()
  {clrscr();
  int n,a[50];
  cout<<"Size:";
  cin>>n;
  cout<<"Array:";
  for(int i=0;i<n;i++)
  {cin>>a[i];
  }
  bubble(a,n);
  cout<<"After sorting:";
  for(i=0;i<n;i++)
  {cout<<a[i]<<"\t";
  }
  getch();
 }
 

void bubble(int A[],int N)
 {int temp;
  
for(int i=0;i<N;i++)
  
{for(int j=0;j<(N-1)-i;j++)
	{if(A[j]>A[j+1])
	{ temp=A[j];
	 A[j]=A[j+1];
	 A[j+1]=temp;
	}}
  }
 }

